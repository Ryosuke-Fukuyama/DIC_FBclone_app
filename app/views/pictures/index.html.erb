<h1>投稿一覧</h1>
<p><%= notice %></p>
<table>
  <tr>
    <th>イメージ</th>
    <th>コメント</th>
  <tr/>
<% @pictures.each do |picture| %>
  <tr>
    <td><%= picture.image %></td>
    <td><%= picture.content %></td>
    <td><%= link_to '詳細を確認', picture_path(picture.id) %></td>
    <td><%= link_to "投稿を編集", edit_picture_path(picture.id) %></td>
    <td><%= link_to '投稿を削除', picture_path(picture.id),
      method: :delete,
      data: { confirm: '削除しますか？' } %>
    </td>
  </tr>
<% end %>
</table>
<br>
<%= link_to '投稿新規投稿', new_picture_path %>

